#!/bin/sh

if [ -z "$1" ]
    then
        echo "No draft title"
        exit
fi

TITLE="$(echo "$1" | sed -e 's/[^[:alnum:]]/-/g' | tr -s '-' | tr A-Z a-z)"

touch _drafts/$TITLE.md

echo --- >> _drafts/$TITLE.md
echo title: $1 >> _drafts/$TITLE.md
echo author: Andrew >> _drafts/$TITLE.md
echo layout: post >> _drafts/$TITLE.md
echo permalink: /2014/01/$TITLE/ >> _drafts/$TITLE.md
echo --- >> _drafts/$TITLE.md
